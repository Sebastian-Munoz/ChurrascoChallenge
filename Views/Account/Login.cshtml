@model ChurrascoChallenge.ViewModels.LoginVM;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - ChurrascoChallenge</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="gradient-login">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-transparent">
                    <img class="card-img-top" src="~/img/LOGO1.png" alt="Title" />
                    <div class="card-body">
                        <form asp-controller="Account" asp-action="Login" method="post">
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="Username" required asp-for="Username">
                                <input class="form-control" type="password" placeholder="Password" required asp-for="Password">
                            </div>
                            <div class="form-group pt-2">
                                <div class="row">
                                    <div class="col">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="rememberMeCheck">
                                            <label class="form-check-label text-secondary" for="rememberMeCheck">remember</label>
                                        </div>
                                    </div>
                                    <div class="col d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary btn-login btn-lg">Submit</button>
                                    </div>
                                    @if(ViewData["Message"] != null)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @ViewData["Message"]
                                        </div>
                                    }
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>