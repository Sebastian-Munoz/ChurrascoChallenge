@model ChurrascoChallenge.Models.Product;
<form asp-controller="Products" asp-action="NewProduct" method="post">
    <div class="row">
        <div class="form-group col-6">
            <label for="inputSKU">SKU</label>
            <input type="number" class="form-control" id="inputSKU" placeholder="112233" asp-for="SKU" required>
        </div>
        <div class="form-group col-6">
            <label for="inputName">Name</label>
            <input type="text" class="form-control" id="inputName" asp-for="name" required>
        </div>
    </div>
    <div class="form-group">
        <label for="inputPicture">Picture</label>
        <input type="text" class="form-control" id="inputPicture" placeholder="https://picture.com/picture" asp-for="picture" required>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label for="inputPrice">Price</label>
            <input type="number" class="form-control" id="inputPrice" step="0.01" placeholder="0.00" asp-for="price" required>
        </div>
        <div class="form-group col-md-6">
            <label for="inputCurrency">Currency</label>
            <input type="text" class="form-control" id="inputCurrency" placeholder="USD" asp-for="currency" required>
        </div>
    </div>
    <div class="row pb-2">
        <div class="form-group col-md-6">
            <label for="inputCode">Code</label>
            <input type="number" class="form-control" id="inputCode" placeholder="1234" asp-for="code">
        </div>
        <div class="form-group col-md-6">
            <label for="inputDescription">Description</label>
            <input type="text" class="form-control" id="inputDescription" asp-for="description">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>